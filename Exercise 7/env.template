# Environment Variables Template for RAG System
# Copy this file to .env.local and fill in your actual API keys

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Cohere Configuration (Optional - for reranking)
COHERE_API_KEY=your_cohere_api_key_here

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here
PINECONE_INDEX_NAME=rag-documents

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/rag_system
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/rag_system

# No third-party document processing needed - using free local libraries!

# Application Configuration
MAX_FILE_SIZE=10485760
EMBEDDING_MODEL=text-embedding-3-small
CHAT_MODEL=gpt-4o
MAX_CHUNKS_PER_DOCUMENT=100
SIMILARITY_THRESHOLD=0.7

# Development Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
